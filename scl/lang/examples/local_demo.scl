// Local System Information Demo
// This demonstrates basic functionality without requiring SSH

// Configuration
mode := "interpret";
setting := "configuration";
super_user := true;
on_error := "rollback";

fn main() {
    // Print banner
    print("🖥️ Local System Information Demo");
    
    // Get local system information
    print("📊 Retrieving local system information...");
    sysinfo();
    
    // Test basic functionality
    print("✅ Testing basic access...");
    test();
    
    // Create a test file locally
    print("📁 Creating test file...");
    create("/tmp", "scl_test.txt", "644");
    
    // Print completion message
    print("🎉 Local demo completed successfully!");
}