// SSH File Operations Test
// Simple test for SSH-based file operations

// Configuration
mode := "interpret";
setting := "configuration";
super_user := true;
on_error := "rollback";
target := "testuser@localhost:2222";

fn main() {
    print("🐳 SSH File Operations Test");
    
    // Get system info first to establish connection
    print("📊 Connecting and getting system info...");
    sysinfo();
    
    print("📁 Testing file operations...");
    
    // Test file creation in /tmp (should have write permissions)
    create("/tmp", "scl_test.txt", "644");
    
    print("✅ File operations test completed!");
}