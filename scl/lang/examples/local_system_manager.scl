// Local System Manager - A comprehensive local system management script
// This script demonstrates SCL's capabilities on your local macOS machine
// No SSH required - all operations run locally

// Configuration
mode := "interpret";
setting := "configuration";
super_user := true;
on_error := "rollback";

// System configuration variables
declare backup_enabled: bool = true;
declare cleanup_enabled: bool = true;
declare monitoring_enabled: bool = true;
declare create_workspace: bool = true;

fn main() {
    print("ğŸ–¥ï¸  Local System Manager - SCL Demo");
    print("=====================================");
    
    // Phase 1: System Analysis
    system_analysis();
    
    // Phase 2: Workspace Setup
    if (create_workspace) {
        workspace_setup();
    }
    
    // Phase 3: System Monitoring
    if (monitoring_enabled) {
        system_monitoring();
    }
    
    // Phase 4: File Management
    file_management_demo();
    
    // Phase 5: Backup Operations
    if (backup_enabled) {
        backup_operations();
    }
    
    // Phase 6: System Cleanup
    if (cleanup_enabled) {
        system_cleanup();
    }
    
    // Phase 7: Final Report
    final_report();
    
    print("âœ… Local System Manager completed successfully!");
}

fn system_analysis() {
    print("ğŸ“Š Phase 1: System Analysis");
    print("----------------------------");
    
    // Get comprehensive system information
    print("ğŸ” Gathering system information...");
    sysinfo();
    
    print("ğŸ“ˆ Current system status analyzed");
}

fn workspace_setup() {
    print("ğŸ—ï¸  Phase 2: Workspace Setup");
    print("-----------------------------");
    
    // Create a demo workspace in /tmp
    print("ğŸ“ Creating SCL demo workspace...");
    
    // Create main workspace directory
    create("/tmp/scl_workspace", "README.md", "644");
    
    // Create project structure
    create("/tmp/scl_workspace/projects", "project_list.txt", "644");
    create("/tmp/scl_workspace/logs", "system.log", "644");
    create("/tmp/scl_workspace/backups", "backup_info.txt", "644");
    create("/tmp/scl_workspace/configs", "app.conf", "600");
    
    print("âœ… Workspace structure created in /tmp/scl_workspace");
}

fn system_monitoring() {
    print("ğŸ“Š Phase 3: System Monitoring");
    print("------------------------------");
    
    print("ğŸ” Analyzing system performance...");
    
    // Note: sysinfo() works locally and provides system details
    sysinfo();
    
    print("ğŸ“ˆ System monitoring completed");
    print("ğŸ’¡ Check the output above for system metrics");
}

fn file_management_demo() {
    print("ğŸ“ Phase 4: File Management Demo");
    print("---------------------------------");
    
    // Create sample configuration files
    print("ğŸ“ Creating sample configuration files...");
    
    create("/tmp/scl_workspace/configs", "nginx.conf", "644");
    create("/tmp/scl_workspace/configs", "app.properties", "600");
    create("/tmp/scl_workspace/configs", "database.yml", "600");
    
    // Create sample project files
    print("ğŸš€ Creating sample project files...");
    
    create("/tmp/scl_workspace/projects", "web_app.md", "644");
    create("/tmp/scl_workspace/projects", "api_service.md", "644");
    create("/tmp/scl_workspace/projects", "mobile_app.md", "644");
    
    // Create log files with different permissions
    print("ğŸ“‹ Creating log files...");
    
    create("/tmp/scl_workspace/logs", "application.log", "644");
    create("/tmp/scl_workspace/logs", "error.log", "644");
    create("/tmp/scl_workspace/logs", "access.log", "644");
    
    print("âœ… File management demo completed");
}

fn backup_operations() {
    print("ğŸ’¾ Phase 5: Backup Operations");
    print("------------------------------");
    
    print("ğŸ“¦ Creating backup of workspace...");
    
    // Create backup directory
    create("/tmp/scl_backups", "backup_log.txt", "644");
    
    // Simulate backup operations by creating backup info files
    create("/tmp/scl_backups", "workspace_backup_info.txt", "644");
    create("/tmp/scl_backups", "config_backup_info.txt", "644");
    create("/tmp/scl_backups", "project_backup_info.txt", "644");
    
    print("âœ… Backup operations completed");
    print("ğŸ“ Backup information stored in /tmp/scl_backups");
}

fn system_cleanup() {
    print("ğŸ§¹ Phase 6: System Cleanup");
    print("---------------------------");
    
    print("ğŸ—‘ï¸  Performing system cleanup tasks...");
    
    // Create cleanup log
    create("/tmp/scl_workspace/logs", "cleanup.log", "644");
    
    // Simulate cleanup by creating cleanup report
    create("/tmp/scl_workspace", "cleanup_report.txt", "644");
    
    print("âœ… System cleanup completed");
    print("ğŸ“‹ Cleanup report available in workspace");
}

fn final_report() {
    print("ğŸ“Š Phase 7: Final System Report");
    print("--------------------------------");
    
    // Create final report
    create("/tmp/scl_workspace", "system_report.txt", "644");
    
    print("ğŸ“ˆ Final system analysis:");
    
    // Get final system state
    sysinfo();
    
    print("ğŸ“ Files created during this demo:");
    print("   â€¢ /tmp/scl_workspace/ - Main workspace");
    print("   â€¢ /tmp/scl_workspace/projects/ - Project files");
    print("   â€¢ /tmp/scl_workspace/configs/ - Configuration files");
    print("   â€¢ /tmp/scl_workspace/logs/ - Log files");
    print("   â€¢ /tmp/scl_workspace/backups/ - Backup information");
    print("   â€¢ /tmp/scl_backups/ - Backup storage");
    
    print("ğŸ” You can explore the created files with:");
    print("   ls -la /tmp/scl_workspace/");
    print("   ls -la /tmp/scl_backups/");
    
    print("ğŸ“Š System report generated successfully");
}