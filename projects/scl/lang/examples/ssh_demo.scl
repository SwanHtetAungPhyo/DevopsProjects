// SSH DevOps Demo for Docker Testing
// This demonstrates SSH-based DevOps functionality with Docker container

// Configuration
mode := "interpret";
setting := "configuration";
super_user := true;
on_error := "rollback";
target := "testuser@localhost:2222";

fn main() {
    // Print banner
    print("🐳 SSH DevOps Demo with Docker Container");
    
    // Get remote system information
    print("📊 Retrieving remote system information...");
    sysinfo();
    
    // Monitor system metrics
    print("📈 Collecting monitoring metrics...");
    monitor();
    
    // Package management
    print("📦 Installing packages...");
    package("install", "tree");
    
    // Service management
    print("⚙️ Managing services...");
    service("status", "ssh");
    
    // File operations
    print("📁 File operations...");
    create("/tmp", "scl_test.txt", "644");
    
    // Network diagnostics
    print("🌐 Network diagnostics...");
    nettest("google.com", "ping");
    
    // Firewall management
    print("🔥 Firewall management...");
    firewall("status");
    
    // Log analysis
    print("📋 Log analysis...");
    logs("/var/log/syslog", "ssh", 5);
    
    // Security audit
    print("🔒 Security audit...");
    audit();
    
    // Final message
    print("✅ SSH DevOps demo completed successfully!");
}