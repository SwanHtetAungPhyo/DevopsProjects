# DevOps Projects Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# AWS Configuration
# =============================================================================
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_DEFAULT_REGION=us-east-1
AWS_PROFILE=default

# =============================================================================
# Docker Configuration
# =============================================================================
DOCKER_HOST=unix:///var/run/docker.sock
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# =============================================================================
# Application Configuration
# =============================================================================
# Environment (development, staging, production)
ENVIRONMENT=development

# Logging configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Application ports
APP_PORT=8080
HEALTH_PORT=8080

# =============================================================================
# Docker Log Agent Configuration
# =============================================================================
# Webhook URL for alerts (required for Docker Log Agent)
WEBHOOK_URL=https://your-webhook-endpoint.com/alerts

# Container filters (comma-separated)
ALERT_AGENT_CONTAINER_FILTERS=nginx,redis,postgres

# Log levels to monitor
ALERT_AGENT_LOG_LEVELS=ERROR,FATAL,PANIC,WARN

# Check interval for container scanning
ALERT_AGENT_CHECK_INTERVAL=30s

# Log buffer size
ALERT_AGENT_BUFFER_SIZE=1000

# =============================================================================
# Event-Driven Services Configuration
# =============================================================================
# NATS server configuration
NATS_URL=nats://localhost:4222
NATS_CLUSTER_ID=event-cluster

# Service discovery
SERVICE_REGISTRY_URL=http://localhost:8500

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=devops_db
DB_USER=devops_user
DB_PASSWORD=secure_password_here
DB_SSL_MODE=disable

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# Monitoring and Observability
# =============================================================================
# Prometheus metrics
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# Jaeger tracing
JAEGER_ENDPOINT=http://localhost:14268/api/traces
JAEGER_SAMPLER_TYPE=const
JAEGER_SAMPLER_PARAM=1

# =============================================================================
# Security Configuration
# =============================================================================
# JWT configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRY=24h

# TLS configuration
TLS_ENABLED=false
TLS_CERT_FILE=/path/to/cert.pem
TLS_KEY_FILE=/path/to/key.pem

# =============================================================================
# Infrastructure Configuration
# =============================================================================
# Terraform backend
TF_BACKEND_BUCKET=your-terraform-state-bucket
TF_BACKEND_KEY=devops-projects/terraform.tfstate
TF_BACKEND_REGION=us-east-1

# Pulumi configuration
PULUMI_ACCESS_TOKEN=your_pulumi_access_token_here
PULUMI_STACK=dev

# Ansible configuration
ANSIBLE_HOST_KEY_CHECKING=False
ANSIBLE_STDOUT_CALLBACK=yaml
ANSIBLE_INVENTORY=inventory/hosts.yml

# =============================================================================
# CI/CD Configuration
# =============================================================================
# Docker registry
DOCKER_REGISTRY=docker.io
DOCKER_USERNAME=your_docker_username
DOCKER_PASSWORD=your_docker_password

# GitHub configuration
GITHUB_TOKEN=your_github_token_here
GITHUB_REPOSITORY=your-username/DevopsProjects

# =============================================================================
# Notification Configuration
# =============================================================================
# Slack notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#devops-alerts

# Email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=devops-alerts@yourcompany.com

# =============================================================================
# Development Configuration
# =============================================================================
# Debug mode
DEBUG=false
VERBOSE=false

# Development tools
HOT_RELOAD=true
AUTO_MIGRATE=true

# Testing configuration
TEST_DATABASE_URL=postgres://test:test@localhost:5433/test_db
TEST_REDIS_URL=redis://localhost:6380

# =============================================================================
# Load Balancer Configuration
# =============================================================================
# Caddy configuration
CADDY_ADMIN_PORT=2019
CADDY_HTTP_PORT=80
CADDY_HTTPS_PORT=443

# =============================================================================
# Backup Configuration
# =============================================================================
# Backup settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# =============================================================================
# Feature Flags
# =============================================================================
# Enable/disable features
FEATURE_METRICS=true
FEATURE_TRACING=true
FEATURE_HEALTH_CHECKS=true
FEATURE_AUTO_SCALING=false

# =============================================================================
# Custom Configuration
# =============================================================================
# Add your custom environment variables here
# CUSTOM_VAR=custom_value